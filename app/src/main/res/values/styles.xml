<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="LeftMenu" parent="Theme.AppCompat.Light.NoActionBar">

    </style>
    <style name="ScreensConstructor">
        <item name="android:textColor">@color/textContet</item>
    </style>
    <style name="layoutbackGrey">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="buttonTransparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">15dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dip</item>

    </style>
    <style name="editText" parent="ScreensConstructor">
        <item name="android:padding">15dp</item>
    </style>

    <style name="buttonFloating">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:src">@mipmap/ic_add_circle_blue</item>


    </style>

    <style name="adapterListText">
        <item name="android:textSize">22dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingLeft">2dip</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="labels">
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>

    </style>
    <style name="labelscharacter">
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
